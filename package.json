{
  "name": "ai-filesystem-mcp",
  "version": "2.0.0",
  "description": "AI-optimized FileSystem MCP with advanced features for intelligent file manipulation",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc -w",
    "start": "node dist/index.js",
    "start:refactored": "node dist/index-refactored.js",
    "dev": "tsx watch src/index.ts",
    "dev:refactored": "tsx watch src/index-refactored.ts",
    "test": "npm run build && node test.js",
    "test:refactored": "npm run build && node test-refactored.js",
    "test:jest": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration", 
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:phase1": "npm run build && node test-phase1.js",
    "validate:phase1": "npm run build && node debug-phase1.js",
    "clean": "rm -rf dist",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write 'src/**/*.ts'"
  },
  "keywords": ["mcp", "filesystem", "ai", "code-manipulation", "refactoring", "security"],
  "author": "AI FileSystem Team",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "glob": "^10.3.10",
    "chokidar": "^3.5.3",
    "minimatch": "^9.0.3",
    "typescript": "^5.3.0",
    "lru-cache": "^10.2.0",
    "diff": "^5.2.0",
    "adm-zip": "^0.5.10",
    "tar": "^6.2.0",
    "natural": "^6.10.0",
    "@babel/parser": "^7.23.0",
    "@babel/traverse": "^7.23.0",
    "@babel/generator": "^7.23.0",
    "@babel/types": "^7.23.0",
    "prettier": "^3.2.0",
    "eslint": "^8.56.0",
    "archiver": "^6.0.0",
    "extract-zip": "^2.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/glob": "^8.1.0",
    "@types/natural": "^5.1.0",
    "@types/babel__traverse": "^7.20.0",
    "@types/babel__generator": "^7.6.0",
    "@types/diff": "^5.0.0",
    "@types/adm-zip": "^0.5.0",
    "@types/tar": "^6.1.0",
    "@types/eslint": "^8.56.0",
    "@types/archiver": "^6.0.0",
    "typescript": "^5.3.0",
    "tsx": "^4.6.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "@jest/globals": "^29.7.0"
  }
}